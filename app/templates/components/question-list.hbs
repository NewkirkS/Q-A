{{#each model as |question|}}
<div class="row">
  <hr>
  <div class="col-xs-10 question">
    {{#link-to 'question' question.id}}<h4>{{question.title}}</h4>{{/link-to}}
    <ul>
      <li>{{question.date}}</li>
      <li class="author">{{question.author}}</li>
    </ul>
  </div>
  <div class="col-xs-2 answer-count">
    <h4>{{answer-count question}}</h4>
    <p class="answer-name">Answers</p>
  </div>
</div>
{{/each}}

<div class="index-forms">
  {{new-question saveQuestion="saveQuestion"}}
</div>
